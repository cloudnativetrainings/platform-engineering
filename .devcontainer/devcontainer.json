{
  "name": "Platform Administration Training Labs",
  // TODO image
  "image": "quay.io/kubermatic-labs/training-ghcs-kubermatic-kubernetes-platform-administration-trainee-environment:1.0.0",
  "workspaceMount": "source=${localWorkspaceFolder},target=/training/,type=bind",
  "workspaceFolder": "/training/",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "terminal.integrated.shell.linux": "/bin/bash",
        "files.exclude": {
          ".git/": true,
          ".gititnore": true,
          ".devcontainer/": true,
          ".99_todos/": true,
          "teardown.sh": true,
          "makefile": true
        }
      }
    }
  },
  "remoteUser": "root"
}